<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".view.impl.NoteEventActivity">
    <!--<co.lujun.androidtagview.TagContainerLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/note_event_tagline"-->
        <!--/>-->


    <!---->
    <android.support.v7.widget.Toolbar
        android:id="@+id/note_event_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLucency"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/note_event_back"
            android:background="@mipmap/baseline_keyboard_backspace_black_18dp"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:textSize="18dp"
            android:text="保存"
            android:id="@+id/note_event_text_view_save"/>

    </android.support.v7.widget.Toolbar>
    <jp.wasabeef.richeditor.RichEditor
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/note_edit_rich_edit"
        ></jp.wasabeef.richeditor.RichEditor>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         >
         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/note_event_card_view_start">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="10dp">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="开始时间"
                 android:layout_marginLeft="10dp"
                 android:textSize="20dp"
            />
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="right" >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="10:00"
                 android:id="@+id/note_event_text_view_start"
                 android:layout_marginRight="10dp"
                 android:textSize="20dp"/>
             </LinearLayout>
         </LinearLayout>
         </android.support.v7.widget.CardView>
         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/note_event_card_view_end">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="20dp">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="结束时间"
                 android:layout_marginLeft="10dp"
                 android:textSize="20dp"
                 />
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="right" >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="12:00"
                     android:id="@+id/note_event_text_view_end"
                     android:layout_marginRight="10dp"
                     android:textSize="20dp"/>
             </LinearLayout>
         </LinearLayout>
         </android.support.v7.widget.CardView>
     </LinearLayout>
    <co.lujun.androidtagview.TagContainerLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note_event_tags"
        app:container_background_color="@color/colorWhite"
        app:container_border_color="@color/colorWhite"
        />
<Button
    android:id="@+id/test_start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="开始"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_stop"
        android:text="结束"/>
</LinearLayout>