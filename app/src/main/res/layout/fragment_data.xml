<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.impl.DataFragment">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/data_toolbar">



    </android.support.v7.widget.Toolbar>
    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="5dp"
        app:elevation="1dp">
    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:eventTextColor="@color/colorWhite"
        app:timeColumnTextSize="12sp"
        app:hourHeight="60dp"
        app:timeColumnPadding="8dp"
        app:timeColumnTextColor="@color/colorPrimaryDark"
        app:timeColumnBackgroundColor="@color/colorWhite"
        app:headerRowPadding="12dp"
        app:columnGap="8dp"
        app:numberOfVisibleDays="7"
        app:headerRowBackgroundColor="@color/mcv_text_date_dark"
        app:dayBackgroundColor="@color/colorWhite"
        app:todayBackgroundColor="@color/colorPrimaryButton"/>
    </android.support.v7.widget.CardView>
</LinearLayout>